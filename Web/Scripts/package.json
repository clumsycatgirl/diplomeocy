{
    "name": "myapp-client-bundle",
    "version": "1.0.0",
    "description": "This is client-side scripts bundle for MyApp",
    "private": true,
    "scripts": {
        "build": "webpack --mode=development",
        "build:prod": "webpack --mode=production",
        "watch": "webpack --watch",
        "css:build": "npx tailwindcss -i ../wwwroot/css/site.css -o ../wwwroot/css/styles.css --minify",
        "css:watch": "npx tailwindcss --watch -i ../wwwroot/css/site.css -o ../wwwroot/css/styles.css --minify"
    },
    "devDependencies": {
        "ts-loader": "^9.2.5",
        "typescript": "^4.4.3",
        "webpack": "^5.52.1",
        "webpack-cli": "^4.8.0"
    },
    "dependencies": {
        "@microsoft/signalr": "^8.0.0",
        "@tailwindcss/forms": "^0.5.7",
        "@types/recordrtc": "^5.6.14",
        "@types/select2": "^4.0.63",
        "@types/signalr": "^2.4.3",
        "preline": "^2.3.0",
        "recordrtc": "^5.6.2",
        "select2": "^4.1.0-rc.0",
        "sweetalert2": "^11.11.0",
        "tailwindcss": "^3.4.3"
    }
}
