@model Web.Models.GameViewModel;

@{

    ViewData["Title"] = $"Diplomeocy - {Model.Game.Id}";
}

<input type="hidden" id="group" value="@Model.Game.Id">
<input type="hidden" id="own-country" value="@Model.OwnCountry">


<div class="" id="svg-container">
    @* <img src="~/assets/images/map.svg" alt="Map" class="object-cover w-full h-full"> *@
    @Html.Raw(ViewBag.SvgContent)
</div>

<div>
    <input type="radio" name="type" id="regular" value="regular" checked>
    <label for="regular">Regular</label>

    <input type="radio" value="support" name="type" id="support">
    <label for="support">Support</label>

    <input type="radio" value="convoy" name="type" id="convoy">
    <label for="convoy">Convoy</label>
</div>

@section Scripts {
    <script type="module" src="~/js/game/index.js"></script>
}
