
@model Web.Models.UsersPlay
@{
    ViewData["Title"] = "Create";

    Random rand = new Random();
    int i = rand.Next(999999);
    DateOnly date = DateOnly.FromDateTime(DateTime.Now);
}

<h1>Create</h1>

<h4>Tables</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">Id Table</label>
                <input asp-for="Id" class="form-control"  value="@i" disabled   />
            </div>
            <div class="form-group">
                <input asp-for="Date" class="form-control" value="@date" hidden />
            </div>
            <div class="form-group">
                <input asp-for="Host" class="form-control" value="@Model.Host" hidden />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

