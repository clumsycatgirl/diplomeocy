@model TableViewModel

@{
    ViewData["Title"] = "Table";

    string GetTextForPlayer(int index) {
        if (Model.Players.Length > index) {
            return Model.Players[index].User.Username;
        };
        return "Waiting...";
    }
}

<div class="w-full h-full flex flex-col items-center space-y-10">
    <div class="flex justify-center items-center space-x-96">
        <input type="text" name="" id="group-id"
               class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-1/3 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 text-center"
               disabled
               value="@Model.Table.Id">
        <button type="button" class="w-1/3 text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-300 dark:hover:bg-primary-400 dark:focus:ring-primary-500"
                id="start-game-button" disabled>
            play
        </button>
    </div>

    <div class="flex justify-center items-center space-x-32">
        <div class="flex flex-col space-y-10">
            <div class="flex justify-center items-center">
                <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-1/3 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white text-center" value="@GetTextForPlayer(0)" disabled>
            </div>
            <div class="flex justify-center items-center space-x-64">
                <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-1/3 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white text-center" value="@GetTextForPlayer(1)" disabled>
                <span class="text-gray-900 dark:text-white">-</span>
                <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-1/3 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white text-center" value="@GetTextForPlayer(2)" disabled>
            </div>
            <div class="flex justify-center items-center space-x-64">
                <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-1/3 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white text-center" value="@GetTextForPlayer(3)" disabled>
                <span class="text-gray-900 dark:text-white">-</span>
                <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-1/3 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white text-center" value="@GetTextForPlayer(4)" disabled>
            </div>
            <div class="flex justify-center items-center space-x-64">
                <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-1/3 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white text-center" value="@GetTextForPlayer(5)" disabled>
                <span class="text-gray-900 dark:text-white">-</span>
                <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-1/3 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white text-center" value="@GetTextForPlayer(6)" disabled>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" src="/js/tables/index.js"></script>
}
